  "autoload": {
    "psr-4": {
      "Wwwision\\DCBEventStore\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wwwision\\DCBEventStore\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test-phpstan": "phpstan",
    "test-unit": "phpunit tests",
    "test": [
      "@test-phpstan",
      "@test-unit"
    ]
