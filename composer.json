{
  "name": "wwwision/dcb-eventstore",
  "description": "Implementation of the Dynamic Consistency Boundary pattern described by Sara Pellegrini",
  "type": "package",
  "license": "MIT",
  "authors": [
    {
      "name": "Bastian Waidelich",
      "email": "b.waidelich@wwwision.de"
    }
  ],
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/bwaidelich"
    },
    {
      "type": "paypal",
      "url": "https://www.paypal.me/bwaidelich"
    }
  ],
  "require": {
    "php": ">=8.3",
    "psr/clock": "^1",
    "webmozart/assert": "^1.11"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpstan/phpstan": "^2",
    "friendsofphp/php-cs-fixer": "^3.88",
    "phpunit/phpunit": "^11"
  },
  "autoload": {
    "psr-4": {
      "Wwwision\\DCBEventStore\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wwwision\\DCBEventStore\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test:phpstan": "phpstan",
    "test:cs": "vendor/bin/php-cs-fixer check",
    "test:cs:fix": "vendor/bin/php-cs-fixer fix",
    "test:unit": "phpunit tests/Unit --no-coverage",
    "test:unit:coverage": "php -d xdebug.mode=coverage vendor/bin/phpunit tests/Unit --coverage-text --coverage-clover=coverage.xml --coverage-filter=src",
    "test:unit:coverage:check": [
      "@test:unit:coverage",
      "@php check-coverage.php"
    ],
    "test:integration": "phpunit tests/Integration --exclude-group=feature_liveStream --no-coverage",
    "test": [
      "@test:phpstan",
      "@test:cs",
      "@test:unit:coverage:check",
      "@test:integration"
    ]
  }
}
